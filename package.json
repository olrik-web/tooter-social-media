{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "npx tailwindcss -o app/styles/app.css -- --minify",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "npx tailwindcss -o app/styles/app.css -- --watch",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.13",
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
    "bcryptjs": "^2.4.3",
    "mongoose": "^6.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-syntax-highlighter": "^15.5.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "autoprefixer": "^10.4.8",
    "concurrently": "^7.3.0",
    "eslint": "^8.20.0",
    "postcss": "^8.4.16",
    "tailwindcss": "^3.1.8"
  },
  "engines": {
    "node": ">=14"
  }
}
